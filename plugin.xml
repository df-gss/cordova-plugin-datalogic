<?xml version="1.0" encoding="UTF-8"?>

<plugin id="cordova-plugin-datalogic"
        version="0.4.1"
        xmlns="http://apache.org/cordova/ns/plugins/1.0">

    <name>Datalogic Cordova Plugin</name>

    <engines>
        <engine name="cordova-android" version=">=12.0.0" />
    </engines>

    <!-- JS modules -->
    <js-module src="www/barcodeManager.js" name="barcodeManager">
        <clobbers target="barcodeManager"/>
    </js-module>

    <js-module src="www/scannerProperties.js" name="scannerProperties">
        <clobbers target="scannerProperties"/>
    </js-module>

    <js-module src="www/keyboardManager.js" name="keyboardManager">
        <clobbers target="keyboardManager"/>
    </js-module>

    <js-module src="www/autoScanTrigger.js" name="autoScanTrigger">
        <clobbers target="autoScanTrigger"/>
    </js-module>

    <js-module src="www/ledManager.js" name="ledManager">
        <clobbers target="ledManager"/>
    </js-module>

    <platform name="android">

        <!-- Android features -->
        <config-file target="res/xml/config.xml" parent="/*">

            <feature name="BarcodeManager">
                <param name="android-package"
                       value="com.datalogic.cordova.decode.BarcodeManager"/>
                <param name="onload" value="true"/>
            </feature>

            <feature name="ScannerProperties">
                <param name="android-package"
                       value="com.datalogic.cordova.decode.configuration.ScannerProperties"/>
            </feature>

            <feature name="KeyboardManager">
                <param name="android-package"
                       value="com.datalogic.cordova.device.input.KeyboardManager"/>
            </feature>

            <feature name="AutoScanTrigger">
                <param name="android-package"
                       value="com.datalogic.cordova.device.input.AutoScanTrigger"/>
            </feature>

            <feature name="LedManager">
                <param name="android-package"
                       value="com.datalogic.cordova.device.notification.LedManager"/>
            </feature>

        </config-file>

        <!-- Manifest additions -->
        <config-file target="AndroidManifest.xml"
                     parent="/manifest/application">

            <uses-library
                android:name="com.datalogic.device"
                android:required="false" />

        </config-file>

        <!-- Java sources -->
        <source-file src="src/android/BarcodeManager.java"
                     target-dir="src/com/datalogic/cordova/decode"/>

        <source-file src="src/android/ScannerProperties.java"
                     target-dir="src/com/datalogic/cordova/decode/configuration"/>

        <source-file src="src/android/KeyboardManager.java"
                     target-dir="src/com/datalogic/cordova/device/input"/>

        <source-file src="src/android/Trigger.java"
                     target-dir="src/com/datalogic/cordova/device/input"/>

        <source-file src="src/android/AutoScanTrigger.java"
                     target-dir="src/com/datalogic/cordova/device/input"/>

        <source-file src="src/android/LedConfig.java"
                     target-dir="src/com/datalogic/cordova/device/notification"/>

        <source-file src="src/android/LedManager.java"
                     target-dir="src/com/datalogic/cordova/device/notification"/>

        <!-- Dependencies -->
        <framework src="com.github.datalogic:datalogic-android-sdk:1.12" />
        <framework src="com.google.code.gson:gson:2.10.1" />

        <!-- Optional custom Gradle -->
        <framework src="src/android/build.gradle"
                   custom="true"
                   type="gradleReference"/>

    </platform>

</plugin>
